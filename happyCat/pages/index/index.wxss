.coursetime {
    width: 90%;
    margin: 0 auto;
    background-color: #fafafa;
}

.coursetime .pho {
    text-align: center;
    margin: 20rpx 0;
}

.coursetime .pho image {
    width: 80rpx;
    height: 40rpx;
}

.coursetime .time {
    text-align: center;
    color: #a3aaba;
