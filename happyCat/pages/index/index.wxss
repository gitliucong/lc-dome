}

.zb {
    display: flex;
    width: 90%;
    padding: 10rpx;
    box-sizing: border-box;
    border-radius: 50rpx;
    margin: 10rpx auto;
    background-color: #fff;
    box-shadow: 0 0 0.53333rem 0 rgb(0 0 0 / 8%);
    align-items: center;
}

.zb .left {
    width: 30%;
}

.zb .mid {
    color: #eee;
    margin-right: 10rpx;
}

.zb .right {
    width: 60%;
    display: flex;
    align-items: center;
    font-size: 25rpx;
}

.zb .right .time {
    width: 18%;
    font-weight: 600;
}

.zb .right .name {
    width: 70%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.zb image:nth-child(1) {
    width: 50rpx;
    height: 50rpx;
}

.zb image:nth-child(2) {
    width: 120rpx;
    height: 35rpx;
}

.header {
    display: flex;
